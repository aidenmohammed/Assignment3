<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><%= title %></h1>
            <br>
            <a href="/assignmentslist/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add Assignment
            </a>
            <table class="table table-bordered table-striped table-hover">
                <tr class="d-flex">
                    <th class="text-center col-2">Name</th>
                    <th class="col-4">Description</th>
                    <th class="text-center col-1">Duedate</th>
                    <th class="text-center col-1">Class</th>

                </tr>
                <% for(let count=0;count<AssignmentList.length;count++) { %>
                <tr class="d-flex">
                    <td class="text-center col-2"><%= AssignmentList[count].Name %></td>
                    <td class="col-4"><%= AssignmentList[count].Description %> </td>
                    <td class="text-center col-1"><%= AssignmentList[count].Duedate %></td>
                    <td class="text-center col-1"><%= AssignmentList[count].Class %></td>
                    <td class="text-center col-1">
                        <a href="/assignmentslist/edit/<%= AssignmentList[count]._id%>"
                            class="btn btn-primary btn-sm">
                        <i class="fas fa-pencil-alt"></i>Edit
                    </a>
                    </td>
                    <td class="text-center col-1">
                        <a href="/assignmentslist/delete/<%= AssignmentList[count]._id%>"
                            class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i>Delete
                    </a>
                    </td>
                </tr>    
                    <%} %>
            </table>
        </div>
    </div>
</main>
<%- include ../Partials/footer.ejs%>
