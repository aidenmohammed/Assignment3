<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Assignment Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Assignment Name" name="Name" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Assignment Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="enter the Assignment Description" name="Description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="nameTextField">Assignment Duedate</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the assignment due date" name="Duedate" required>
                </div>
                <div class="form-group">
                    <label for="nameTextField">Assignment class</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="enter the class for the assignment" name="Class" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>
