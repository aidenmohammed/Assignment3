<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Assignment name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the assignment Name" name="Name" value="<%= Assignment.Name %>" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Assignment description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="enter the assignment Description" name="Description" required><%= Assignment.Description %></textarea>
                </div>
                <div class="form-group">
                    <label for="nameTextField">Due date</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the assignment due date" name="Duedate" value="<%= Assignment.Duedate %>" required>
                </div>
                <div class="form-group">
                    <label for="nameTextField">class</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the class for the assignment" name="Class" value="<%= Assignment.Class %>" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>
